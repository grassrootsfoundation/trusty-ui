{
	"name": "@grassrootsfoundation/trusty-ui",
	"version": "1.0.0",
	"description": "A reusable UI library for Svelte projects",
	"main": "dist/svelte-ui-library.umd.js",
	"module": "dist/svelte-ui-library.es.js",
	"svelte": "src/index.ts",
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepublishOnly": "npm run build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"codegen:component": "tsx scripts/codegen-component.ts",
		"codegen:route": "tsx scripts/codegen-route.ts",
		"codegen:schema": "npx graphql-codegen --config codegen.ts",
		"codegen:schema:check": "npx graphql-codegen --config codegen.ts --check",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"typecheck": "tsc",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"story:dev": "histoire dev",
		"story:build": "histoire build",
		"story:preview": "histoire preview",
		"sync-build-publish": "pnpm build && pnpm publish",
		"test:coverage": "vitest run --coverage",
		"test:integration": "playwright test",
		"test:e2e": "playwright test",
		"verify": "pnpm lint && pnpm typecheck && pnpm check"
	},
	"type": "module",
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@sveltejs/adapter-auto": "^3.3.1"
	},
	"peerDependencies": {
		"svelte": "5.2.7"
	},
	"devDependencies": {
		"@csstools/postcss-global-data": "^3.0.0",
		"@fontsource-variable/sora": "^5.1.0",
		"@graphql-codegen/cli": "^5.0.3",
		"@graphql-codegen/client-preset": "^4.4.0",
		"@graphql-codegen/typed-document-node": "^5.0.10",
		"@graphql-codegen/typescript": "^4.1.0",
		"@graphql-codegen/typescript-operations": "^4.3.0",
		"@graphql-codegen/typescript-resolvers": "^4.3.0",
		"@histoire/plugin-svelte": "^0.17.17",
		"@iconify/svelte": "^4.0.2",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@testing-library/jest-dom": "^6.5.0",
		"@testing-library/svelte": "^5.2.3",
		"@testing-library/user-event": "^14.5.2",
		"@types/escape-html": "^1.0.4",
		"@types/eslint": "^9.6.0",
		"@types/jest": "^29.5.13",
		"@types/node": "^22.7.5",
		"autoprefixer": "^10.4.20",
		"escape-html": "^1.0.3",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"histoire": "^0.17.17",
		"json-schema-to-typescript": "^15.0.2",
		"marked": "^14.1.3",
		"modern-normalize": "^3.0.1",
		"path": "^0.12.7",
		"postcss": "^8.4.47",
		"postcss-preset-env": "^10.0.7",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^4.0.0",
		"tsx": "^4.19.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"unplugin-icons": "^0.19.3",
		"vite": "^5.0.3",
		"vitest": "^2.0.0"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
